<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:background="#0A00FFF7"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient2"
        android:gravity="center"
        android:padding="6dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/hint"
            android:src="@drawable/a">

        </ImageView>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:id="@+id/scrollView">

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/transaction_button"
        android:padding="10dp"
        android:scrollbars="vertical">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/circular_button"
            android:contentDescription="@string/button"
            android:src="@drawable/sakuracircle"
            android:scaleType="center"
             />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_alignBottom="@+id/button1"
            android:layout_toEndOf="@+id/button1"
            android:background="@drawable/circular_button"
            android:src="@drawable/itachicircle"
            android:contentDescription="@string/button"
            />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/kakashicircle"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/button2"
            android:background="@drawable/circular_button"
            android:contentDescription="@string/button"
             />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/minatocircle"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/button3"
            android:background="@drawable/circular_button"

            android:contentDescription="@string/button"
            />

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="135dp"
            android:background="@drawable/circular_button"
            android:src="@drawable/nejicircle"
            android:contentDescription="@string/button"
            android:gravity="center"
             />

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="135dp"
            android:layout_toEndOf="@+id/button5"
            android:background="@drawable/circular_button"
            android:src="@drawable/tentencircle"
            android:contentDescription="@string/button"
            android:gravity="center"
             />

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/sasukecircle"
            android:layout_marginTop="135dp"
            android:layout_toEndOf="@+id/button2"
            android:background="@drawable/circular_button"
            android:contentDescription="@string/button"
             />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@id/button4"
            android:layout_alignParentTop="true"
            android:src="@drawable/rockleecircle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="135dp"
            android:layout_toEndOf="@+id/button7"
            android:background="@drawable/circular_button"
            android:contentDescription="@string/button"
            android:gravity="center"
            />
        <ImageButton
            android:id="@+id/button9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/button5"
            android:layout_alignEnd="@+id/button5"
            android:layout_alignParentStart="true"
            android:src="@drawable/hinatacir"
            android:layout_marginStart="13dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/circular_button"
            android:contentDescription="@string/button"
            android:gravity="center"


            />

        <ImageButton
            android:id="@+id/button10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/button6"
            android:layout_alignEnd="@id/button6"
            android:layout_marginStart="13dp"
            android:layout_marginTop="26dp"
            android:src="@drawable/narutocircle"
            android:layout_toEndOf="@+id/button9"
            android:background="@drawable/circular_button"
            android:contentDescription="@string/button"
            android:gravity="center"
             />


        <ImageButton
            android:id="@+id/button11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button6"
            android:layout_alignStart="@id/button7"
            android:layout_alignEnd="@id/button7"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/button9"
            android:background="@drawable/circular_button"
            android:contentDescription="@string/button"
            android:gravity="center"
            android:src="@drawable/plus" />

        <ImageView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="136dp"
            android:layout_below="@id/balance"
            android:layout_marginStart="60dp"
            android:layout_marginTop="45dp"
            android:contentDescription="@string/largetext"
            android:src="@drawable/login">

        </ImageView>

        <TextView
            android:id="@+id/poweredby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logintext"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/powered"
            android:textSize="16sp"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/histroy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/button11"
            android:background="@color/white"
            android:text="@string/histroy"
            android:textSize="16sp"
            android:onClick="transaction_history"
            android:gravity="center_horizontal|center"
            android:layout_marginStart="33dp"
            android:textColor="@color/black"
            android:layout_marginTop="150dp"/>

          <ImageView
              android:layout_width="35dp"
              android:layout_height="50dp"
              android:src="@drawable/ic_baseline_history_24"
              android:layout_below="@id/button9"
              android:background="@color/white"
              android:contentDescription="@string/balance"
              android:layout_marginTop="142dp"

              />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:layout_below="@id/button9"
            android:background="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/balance"
            android:layout_marginTop="152dp"

            />

        <TextView
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/histroy"
            android:background="@color/white"
            android:text="@string/balance"
            android:textSize="16sp"
            android:gravity="center_vertical|center"
            android:layout_marginStart="33dp"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:layout_below="@id/histroy"
            android:background="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/balance"
            android:layout_marginTop="63dp"

            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_account_balance_24"
            android:layout_below="@id/histroy"
            android:background="@color/white"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/balance"
            android:layout_marginTop="50dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/logintext"
            android:layout_height="wrap_content"
            android:text="@string/join"
            android:layout_below="@id/login"
            android:gravity="center"/>


    </RelativeLayout>

</ScrollView>


</LinearLayout>



